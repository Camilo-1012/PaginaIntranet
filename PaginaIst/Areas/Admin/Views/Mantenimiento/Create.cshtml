@model PaginaIst.Models.Mantenimiento

@{
    ViewData["Title"] = "Crear Mantenimiento";
}

<br />
<br />
<h3 class="text-center">Crear un nuevo mantenimiento</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Comentario"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Comentario" class="form-control" placeholder="Ingresa el Comentario" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Ruta_evidencias"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Ruta_evidencias" class="form-control" placeholder="Ingresa la Ruta" />
                    <span asp-validation-for="Ruta_evidencias" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="form-group-row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

